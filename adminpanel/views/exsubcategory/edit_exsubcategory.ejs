<%- include('../header') %>

<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
      <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
          <h4 class="page-title">Form Basic</h4>
          <div class="ms-auto text-end">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">
                  Library
                </li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
      <!-- ============================================================== -->
      <!-- Start Page Content -->
      <!-- ============================================================== -->
      <% if(message.success) { %>
        <div class="alert alert-success">
            <%= message.success %>
        </div>
      <% } %>
      <div class="row">
        <div class="col-md-6">
          <div class="card">
            <form method="post" action="/postexsubCategory" class="form-horizontal">
              <div class="card-body">
                <h4 class="card-title">Subcategory</h4>
                <div class="form-group row">
                  <label
                    for="fname"
                    class="col-sm-3 text-end control-label col-form-label"
                    >Category</label
                  >
                  <div class="col-sm-9">

                    
                    

                    <select name="category" class="form-control">
                        <option>---category---</option>
                        <% category.map(cate => { %>
                          <option <% if(exsubcat.categoryId.category == cate.category) { %> selected <% } %> value="<%= cate.id %>"><%= cate.category %></option>
                        <% }) %>
                      </select>
                      
                  </div>
                </div>

                <div class="form-group row">
                  <label
                    for="fname"
                    class="col-sm-3 text-end control-label col-form-label"
                    >subcategory</label
                  >
                  <div class="col-sm-9">
                   <select name="subcategory" class="form-control">
                      <option>---subcategory---</option>
                      <% subcategory.map((subcate)=>{ %>
                        <option value="<%= subcate.id %>"><%= subcate.subcategory %></option>
                      <% }) %>
                   </select>
                  </div>
                </div>

                <div class="form-group row">
                  <label
                    for="fname"
                    class="col-sm-3 text-end control-label col-form-label"
                    >Esubcategory</label
                  >
                  <div class="col-sm-9">
                    <input name="exsubcategory"
                      type="text"
                      class="form-control"
                      id="fname"
                      placeholder="Enter subcategory"
                    />
                  </div>
                </div>
                
              </div>
              <div class="border-top">
                <div class="card-body">
                  <button type="submit" class="btn btn-primary">
                    Submit
                  </button>
                </div>
              </div>
            </form>
          </div>
         
        </div>
        
      </div>
      <!-- editor -->
     
      <!-- ============================================================== -->
      <!-- End PAge Content -->
