<center>
    <h1>Edit User</h1>
        <form method="post" action="/updateRecord" enctype="multipart/form-data">
            <input type="hidden" name="id" value="<%= single.id%>" />
            <table border="1">
                <tr>
                    <td>Name :- </td>
                    <td><input type="text" name="name" value="<%= single.name %>"></td>
                </tr>
                <tr>
                    <td>Phone :- </td>
                    <td><input type="text" name="phone" value="<%= single.phone %>"></td>
                </tr>
                <tr>
                    <td>File Uplaod</td>
                    <td>
                        <input type="file" name="avatar"/>
                        <img src="<%= single.image %>"  width="100"/>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit"></td>
                </tr>
            </table>
        </form>
    <a href="/">View</a>
</center>